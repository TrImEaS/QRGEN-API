datasource db {
  provider = "sqlite"
  url      = "libsql://technologyline-database-trimeas.turso.io"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

model billingdata {
  id                  Int       @id @default(autoincrement())
  company             String
  client              Int
  user                String
  numberBill          Int
  createDate          String
  checkDate           String @default("0")
  verificationNumber  Int
  link                String
}

model users {
  id                  Int       @id @default(autoincrement())
  user                String
  password            String
  isAuthenticated Boolean  @default(false)
}